<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Registro">

    <EditText
        android:id="@+id/etEmail_Registro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="112dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvCorreo_Registro"
        android:layout_width="95dp"
        android:layout_height="22dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="86dp"
        android:text="@string/correo"
        app:layout_constraintBottom_toTopOf="@+id/etEmail_Registro"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etContraseña_Registro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="72dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etEmail_Registro" />

    <TextView
        android:id="@+id/tvContraseña_Registro"
        android:layout_width="124dp"
        android:layout_height="18dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="84dp"
        android:text="@string/contraseña"
        app:layout_constraintBottom_toTopOf="@+id/etContraseña_Registro"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnCrearCuenta_Registro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="48dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="@+id/etContraseña_Registro"
        app:layout_constraintHorizontal_bias="0.032"
        app:layout_constraintStart_toStartOf="@+id/etContraseña_Registro"
        app:layout_constraintTop_toBottomOf="@+id/etContraseña_Registro" />

    <TextView
        android:id="@+id/tvLogin_Registro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/login"
        app:layout_constraintEnd_toEndOf="@+id/btnCrearCuenta_Registro"
        app:layout_constraintStart_toStartOf="@+id/btnCrearCuenta_Registro"
        app:layout_constraintTop_toBottomOf="@+id/btnCrearCuenta_Registro" />
</android.support.constraint.ConstraintLayout>